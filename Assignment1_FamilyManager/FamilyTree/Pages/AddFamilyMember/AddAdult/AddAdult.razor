@using global::Models
@using LoginExample.Data
@using LoginExample.Data.AddFamilyMembersService
@inject IAddFamilyMembersService AddFamilyMembersService;
@inject NavigationManager Navigation

<link rel="stylesheet" type="text/css" href="css/AddMembers/style.css">
<EditForm Model="@addAdult" OnValidSubmit="@AddNewAdult">
    <div class="container">
        <div class=" text-center mt-1 ">
            <h1>Add adult</h1>
            <DataAnnotationsValidator/>
            <ValidationSummary/>
        </div>
        <div class="row ">
            <div class="col-lg-7 mx-auto">
                <div class="card mt-2 mx-auto p-4 bg-light">
                    <div class="card-body bg-light">
                        <div class="container">

                            <div class="controls">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="form_name">Firstname *</label>
                                            <InputTextArea rows="1" id="form_name" @bind-Value="addAdult.FirstName" type="text" name="name" class="form-control" placeholder="Please enter your firstname *" required="required" data-error="Firstname is required."></InputTextArea>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="form_lastname">Lastname *</label>
                                            <InputTextArea id="form_lastname" rows="1" @bind-Value="addAdult.LastName"type="text" name="surname" class="form-control" placeholder="Please enter your lastname *" required="required" data-error="Lastname is required."></InputTextArea>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="form_email">Sex *</label>
                                            <InputTextArea id="form_text" rows="1" @bind-Value="addAdult.Sex" type="text" name="sex" class="form-control" placeholder="Please enter your sex *" required="required" data-error="Valid email is required."></InputTextArea>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="form_email">ID *</label>
                                            <InputNumber id="form_id" rows="1" @bind-Value="addAdult.Id" type="number" name="ID" class="form-control" placeholder="Please enter your ID *" required="required" data-error="Valid ID is required."></InputNumber>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="form_need"> Eye Color *</label>
                                            <select id="form_need" @bind="addAdult.EyeColor" name="need" class="form-control" required="required" data-error="Please specify your hair color.">
                                                <option value="" selected disabled>--Select Eye Color--</option>
                                                <option>Brown</option>
                                                <option>Grey</option>
                                                <option>Green</option>
                                                <option>Blue</option>
                                                <option>Amber</option>
                                                <option>Hazel</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="form_need">Hair Color *</label>
                                            <select id="form_need" name="need" @bind="addAdult.HairColor" class="form-control" required="required" data-error="Please specify your eye color.">
                                                <option value="" selected disabled>--Select Hair Color--</option>
                                                <option>Blond</option>
                                                <option>Red</option>
                                                <option>Brown</option>
                                                <option>Black</option>
                                                <option> White</option>
                                                <option>Grey</option>
                                                <option>Blue</option>
                                                <option>Green</option>
                                                <option>Leverpostej</option>>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="form_age">Age *</label>
                                            <InputNumber id="form_age" rows="1" @bind-Value="addAdult.Age" type="number" name="age" class="form-control" placeholder="Please enter your age *" required="required" data-error="Valid age is required."></InputNumber>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="form_weight">Weight *</label>
                                            <InputNumber id="form_weight" rows="1" @bind-Value="addAdult.Weight" type="number" name="ID" class="form-control" placeholder="Please enter your weight *" required="required" data-error="Valid weight is required."></InputNumber>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="form_weight">Height *</label>
                                            <InputNumber id="form_height" rows="1" @bind-Value="addAdult.Height" type="number" name="height" class="form-control" placeholder="Please enter your height *" required="required" data-error="Valid height is required."></InputNumber>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="form_jobTitle">Job Title *</label>
                                            <InputTextArea id="form_jobTitle" rows="1" @bind-Value="addAdult.JobTitle" type="text" name="age" class="form-control" placeholder="Please enter your job title *" required="required" data-error="Valid job title is required."></InputTextArea>
                                        </div>
                                    </div>
                                    @* Why method onClick?????????????*@
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <input type="submit" class="btn btn-success btn-send pt-2 btn-block " value="Send Message">
                                    </div>
                                </div>

                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</EditForm>
